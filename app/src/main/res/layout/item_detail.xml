<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/root_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/text_margin"
        android:paddingLeft="@dimen/cardview_detail_margin"
        android:paddingRight="@dimen/cardview_detail_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="2">


        <TextView
            android:id="@+id/txt_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/add_delivery"
            android:padding="@dimen/text_margin"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/txt_details"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/report" />

    </LinearLayout>


</LinearLayout>