<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@android:color/white"
    app:cardElevation="@dimen/cardview_default_elevation">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/root_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mdtp_date"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="location"
                        android:textAppearance="?android:textAppearanceMedium" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_ref_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reference no"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txt_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Customer"
                        android:textAppearance="?android:textAppearanceMedium" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/SplitLine_hor1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txt_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:hint="Items: strawberry, Apple, cheese, yogurt, pie, brush, tissue, ballpen"
                android:maxLines="2"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>