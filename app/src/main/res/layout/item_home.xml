<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_cardview_margin"
    android:clickable="true"
    app:cardElevation="@dimen/home_cardview_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AED6F1">

            <!--suppress AndroidLintContentDescription -->
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/category_item_size"
                android:layout_height="@dimen/category_item_size"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="@dimen/category_item_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stockin" />


        </FrameLayout>

        <TextView
            android:id="@+id/home_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E86C1"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="@dimen/text_margin"
            android:text="Stock In"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>