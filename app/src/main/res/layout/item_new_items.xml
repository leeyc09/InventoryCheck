<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_cardview_margin"
    android:layout_marginBottom="@dimen/cardview_padding_bottom"
    android:orientation="vertical"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_receipt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_item_image_height"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/image_placeholder" />


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:hint="@string/name"
            android:paddingTop="@dimen/cardview_top_bottom_margin"
            app:met_floatingLabel="highlight" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:paddingBottom="@dimen/cardview_top_bottom_margin">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_qty"
                android:layout_width="@dimen/qty_width"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/txt_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/qty"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinner_unit"
                android:layout_width="@dimen/unit_width"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/input_qty"
                android:layout_toEndOf="@+id/input_qty"
                android:hint="@string/unit"
                android:inputType="text"
                app:met_floatingLabel="highlight" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>